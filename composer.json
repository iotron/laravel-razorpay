{
    "name": "iotron/laravel-razorpay",
    "description": "Minimal Laravel wrapper for Razorpay PHP SDK",
    "keywords": [
        "iotron",
        "laravel",
        "razorpay",
        "payment",
        "gateway"
    ],
    "homepage": "https://github.com/iotron/laravel-razorpay",
    "license": "MIT",
    "authors": [
        {
            "name": "Iotron",
            "email": "support@iotron.in",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0",
        "razorpay/razorpay": "^2.9"
    },
    "require-dev": {
        "pestphp/pest": "^2.0||^3.0",
        "orchestra/testbench": "^8.0||^9.0"
    },
    "autoload": {
        "psr-4": {
            "Iotron\\LaravelRazorpay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iotron\\LaravelRazorpay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iotron\\LaravelRazorpay\\RazorpayServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
